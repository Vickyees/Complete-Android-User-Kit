<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/xo_b"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".XOMainActivty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 Cross"
                    android:textAllCaps="true"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textStyle="bold|italic"
                    android:textSize="50dp"
                    android:layout_marginBottom="50dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xo_edittext"
                        android:text="Player 1"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:id="@+id/p1"
                        android:hint="Player 1"
                        android:layout_marginRight="40dp"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="30dp"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:text="x"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/xo_edittext"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:hint="Player 2"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:id="@+id/p2"
                        android:text="Player 2"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:textAlignment="center"
                        android:textColor="#FFF"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:text="o"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:textColor="#FFF"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:text="Target"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="45dp"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:textSize="35sp"
                            android:onClick="minus"
                            android:background="@drawable/xo_button"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="-"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:id="@+id/t"  android:textSize="25sp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="10"/>


                        <TextView
                            android:layout_width="45dp"
                            android:maxLines="1"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="#FFF"
                            android:textSize="35sp"
                            android:onClick="plus"
                            android:background="@drawable/xo_button"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="+"/>

                    </LinearLayout>



                </RelativeLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rules :-"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFF"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Win = 1 Point \n Loss = -1 Point \n Bonus = 1 Point"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="#FFF"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/xo_button"
                    android:layout_margin="25dp"
                    android:text="Start"
                    android:onClick="Start"
                    android:textColor="#FFF"
                    />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>