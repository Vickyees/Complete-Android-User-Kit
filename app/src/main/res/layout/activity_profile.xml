<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:onClick="pro"
                android:id="@+id/propic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ii"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="10dp"
                app:civ_shadow_color="@color/colorPrimary"
                android:layout_gravity="center"
                android:padding="10dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD / UPDATE"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_white"
                android:textColor="@color/white"
                android:padding="10dp"
                android:onClick="propic"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name :"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:drawableEnd="@drawable/person"
        />
    <TextView
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"
        />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact no :"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/phone"
        android:autoLink="phone"
        android:background="@drawable/radius"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/e2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Address:"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/location"
        android:background="@drawable/radius"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/e3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Permanent Address :"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/location"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:padding="10dp"
        android:drawableEnd="@drawable/mail"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
            android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender :"
        android:drawableEnd="@drawable/gender"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Of Birth :"
        android:padding="10dp"
        android:drawableEnd="@drawable/cake"
        android:background="@drawable/radius"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/e7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Group :"
        android:drawableEnd="@drawable/hospital"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardian's/Friend's Name :"
        android:drawableEnd="@drawable/person"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardian's/Friend's no :"
        android:drawableEnd="@drawable/phone"
        android:autoLink="phone"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        />
    <TextView
        android:id="@+id/e10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/rad"
        android:padding="10dp"/>
            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD / UPDATE"
        android:layout_gravity="center"
        android:background="@drawable/bg_button_white"
        android:textColor="@color/white"
        android:onClick="btn_add_profile"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>